# This file needs to be sourced from your .bash_profile.

CALICO_DATASTORE_TYPE=kubernetes
# Set the ETCD endpoint here to the appropriate k8s host
# CALICO_ETCD_ENDPOINTS=http://<your-k8s-host>:2379
CALICO_KUBECONFIG=$HOME/.kube/config

HELM_HOME=$HOME/.helm

# Point to your istio location.
PATH=$PATH:$HOME/istio/istio-1.2.0/bin

export CALICO_DATASTORE_TYPE
export CALICO_ETCD_ENDPOINTS
export CALICO_KUBECONFIG
export HELM_HOME

export PATH
